<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.nqlab.btmw.handheld" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".controller.BtmwApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".controller.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.ShowDownloadedActivity"
            android:label="@string/title_activity_show_downloaded" />
        <activity
            android:name=".controller.ListDownloadedActivity"
            android:label="@string/title_activity_list_downloaded" />
        <activity
            android:name=".controller.ShowOnlineActivity"
            android:label="@string/title_activity_show_online" />
        <activity
            android:name=".controller.ListOnlineActivity"
            android:label="@string/title_activity_list_online" />
        <activity
            android:name=".controller.GoActivity"
            android:label="@string/title_activity_go" />
    </application>

</manifest>